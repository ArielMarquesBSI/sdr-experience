<?xml version="1.0"?>
<block>
  <name>SPECTRUM SENSING4</name>
  <key>howto_spectrum_sensing_cf</key>
  <category>HOWTO</category>
  <import>import howto</import>
  <make>howto.spectrum_sensing_cf($sample_rate,$ninput_samples,$samples_per_band,$pfd,$pfa,$tcme,$debug_far,$debug_cdr,$debug_stats,$band_location,$noutput_samples)</make>
  <callback>set_sample_rate($sample_rate)</callback>
  <callback>set_ninput_samples($ninput_samples)</callback>
  <callback>set_samples_per_band($samples_per_band)</callback>
  <callback>set_pfd($pfd)</callback>
  <callback>set_pfa($pfa)</callback>
  <callback>set_tcme($tcme)</callback>
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>real</type>
  </param>
  <param>
    <name>FFT Size</name>
    <key>ninput_samples</key>
    <value>4096</value>
    <type>int</type>
  </param>
  <param>
    <name>Samples per subband</name>
    <key>samples_per_band</key>
    <value>16</value>
    <type>int</type>
  </param>
  <param>
    <name>False Discard Probability</name>
    <key>pfd</key>
    <value>0.001</value>
    <type>real</type>
  </param>
  <param>
    <name>False Alarm Probability</name>
    <key>pfa</key>
    <value>0.0001</value>
    <type>real</type>
  </param>
  <param>
    <name>Tcme</name>
    <key>tcme</key>
    <value>1.9528</value>
    <type>real</type>
  </param>
  <param>
    <name>Debug False Alarm Rate</name>
    <key>debug_far</key>
    <type>enum</type>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
  </param>
  <param>
    <name>Debug Correct Detection Rate</name>
    <key>debug_cdr</key>
    <type>enum</type>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
  </param>
  <param>
    <name>Band Location of the Primary User</name>
    <key>band_location</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Debug Statistics</name>
    <key>debug_stats</key>
    <type>enum</type>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
  </param>
  <param>
    <name>Number of Output Samples</name>
    <key>noutput_samples</key>
    <value>127</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$ninput_samples</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$noutput_samples</vlen>
  </source>
</block>
